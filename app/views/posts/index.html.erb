<% stylesheet_link_tag "posts-list"%>

<main class='main-container'>
  <h1>Listing Posts</h1>
  <%= render partial: "shared/user-container", locals: { user: @user } %>

  <section class='posts-section'>
    <% @posts.each do |post| %>
      <%= render partial: 'shared/post-container', locals: { post: post } %>
      <div class='post-list-comments'>
        <% counter = 0 %>
        <% @comments.each do |comment| %>
          <% if comment.author_id == @user.id %>
            <% break if counter > 5%>
            <% counter += 1 %>
            <%= render partial: 'shared/comment-container', locals: { comment: comment, user: @user } %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </section>

  <br>
</main>
